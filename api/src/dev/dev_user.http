//**********************************************************
//  POSTリクエスト || Content-Type ... リクエスト本体がJSONという宣言
//**********************************************************

### ユーザー情報登録
POST http://localhost:8000/api/users/store
Content-Type: application/json
Accept: application/json

{
    "name": "22222"
}

### ユーザー情報更新
POST http://localhost:8000/api/users/update
Content-Type: application/json
Accept: application/json

{
    "user_id": 11,
    "name": "プレイヤーTEST1",
    "achievement_id": 0,
    "stage_id": 1,
    "icon_id": 1
}

### 所持アイテム更新
POST http://localhost:8000/api/users/item/update
Content-Type: application/json
Accept: application/json

{
    "user_id": 5,
    "item_id": 1,
    "option_id": 1,
    "allie_amount": 2
}

### フォロー登録
POST http://localhost:8000/api/users/follow/store
Content-Type: application/json
Accept: application/json

{
    "user_id": 5,
    "following_user_id": 6
}

### フォロー解除
POST http://localhost:8000/api/users/follow/destroy
Content-Type: application/json
Accept: application/json

{
    "user_id": 5,
    "following_user_id": 6
}

### 受信メール開封
POST http://localhost:8000/api/users/mail/update
Content-Type: application/json
Accept: application/json

{
    "user_id": 1,
    "mail_id": 1
}

### ステージリザルト更新
POST http://localhost:8000/api/users/stage/result/update
Content-Type: application/json
Accept: application/json

{
    "user_id": 1,
    "stage_id": 1,
    "score": 200
}
